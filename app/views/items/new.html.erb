<div class="row">
	<%= render 'shared/user_profile' %>
	
	<div class="span9">
		<h3>Add Item</h3>
		
		<%= form_for(@item) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
		
			<%= f.label :title %>
			<%= f.text_field :title %>
		
			<%= f.label :description %>
			<%= f.text_area :description %>
		
			<%= f.submit "Add", class: "btn btn-large btn-success" %>
		<% end %>
	</div>
</div>